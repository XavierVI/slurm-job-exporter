[Unit]
Description=Slurm job exporter for Prometheus
After=network.target

[Service]
Type=simple
User=prometheus
Group=prometheus
WorkingDirectory=/opt/slurm-job-exporter
ExecStart=/opt/slurm-job-exporter/venv/bin/python /opt/slurm-job-exporter/slurm-job-exporter-cpu.py
PIDFile=/run/slurm-job-exporter.pid
KillMode=process
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target
