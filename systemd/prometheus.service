[Unit]
Description=Prometheus
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=prometheus
Group=prometheus
WorkingDirectory=/var/lib/prometheus
ExecStart=/opt/prometheus-3.7.3.linux-amd64/prometheus \
        --config.file=/opt/prometheus-3.7.3.linux-amd64/prometheus-config.yml \
        --storage.tsdb.path=/var/lib/prometheus
Restart=on-failure

[Install]
WantedBy=multi-user.target
